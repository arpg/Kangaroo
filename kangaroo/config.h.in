#ifndef KANGAROO_CONFIG_H
#define KANGAROO_CONFIG_H

/// Platform
#cmakedefine _UNIX_
#cmakedefine _WIN_
#cmakedefine _OSX_
#cmakedefine _LINUX_

/// Compiler
#cmakedefine _GCC_
#cmakedefine _CLANG_
#cmakedefine _MSVC_

/// Configured libraries
#cmakedefine HAVE_EIGEN
#cmakedefine HAVE_ASSIMP
#cmakedefine HAVE_THRUST
#cmakedefine HAVE_NPP
#cmakedefine HAVE_OPENCV

/// Host defines, not to be used in compiled library code
#if (__cplusplus > 199711L) || (_MSC_VER >= 1700)
#define API_HAVE_CPP11
#define API_HAVE_RVALREF
#endif

#endif // KANGAROO_CONFIG_H
